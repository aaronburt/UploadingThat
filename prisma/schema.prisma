generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model File {
  id           String   @id @default(uuid())
  originalname String
  mimetype     String
  size         Int
  user       User?  @relation(fields: [userId], references: [id])
  userId     String?
}

model User {
  id       String   @id @default(uuid())
  username String @unique
  password String
  files    File[]
  tokens   Bearer[]
}

model Bearer {
  id       String @id @default(uuid())
  user   User @relation(fields: [userId], references: [id])
  userId String
}
